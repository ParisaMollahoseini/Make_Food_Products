<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculation"
    android:background="#FFFF"
    >

    <TextView
        android:id="@+id/title7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingRight="3dp"
        android:text="مقدار محلول های مورد نیاز"
        android:textColor="@color/main_color"
        android:textSize="40sp"

        />
    <View
        android:id="@+id/divider_final"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/title7"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="#039E43" />
    <ScrollView
        android:id="@+id/calculate_scroll_view"
        style="@android:style/Widget.Holo.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/divider_final"
        android:clipToPadding="true"
        android:fillViewport="true">

        <GridLayout
            android:id="@+id/grid_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/spinner2"
            android:columnCount="1"
            android:orientation="vertical"
            android:padding="20dp"
            android:rowCount="14"
            android:rowOrderPreserved="false"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="right">

            <TextView
                android:id="@+id/Ca_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="کلسیم نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/p_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="فسفرنامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/k_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="پتاسیم نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mg_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="منیزیم نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/cl_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="کلر نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/n_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="نیتروژن نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fe_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="آهن نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/b_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="بور نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/zn_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="روی نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mn_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="9"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="منگنز نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mo_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="10"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="مولیبدن نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/cu_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="11"

                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="مس نامشخص"
                android:textColor="@color/blue"
                android:textSize="30sp" />

            <Button
                android:id="@+id/calculate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="12"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"

                android:background="@drawable/button"
                android:padding="10dp"
                android:text="استخراج Excel"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/calculate_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="13"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:text="مرحله قبل"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"

                android:textStyle="bold" />
        </GridLayout>
    </ScrollView>
</RelativeLayout>

